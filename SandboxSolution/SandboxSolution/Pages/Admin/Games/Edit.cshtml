@page
@model SandboxSolution.Pages.Admin.Games.EditModel
@{
}
<script src="~/js/updategame.js"></script>
<form id="edit-game-form">
	<div class="form-group">
		<label for="game-name">Game name</label>
		<input type="text" class="form-control col-3" id="game-name" placeholder="Game name">
	</div>
	<div class="form-group">
		<label for="game-description">Game description</label>
		<input type="text" class="form-control col-3" id="game-description" placeholder="Game description">
	</div>
	<div class="form-group">
		<label for="publisher">Publisher</label>
		<select class="form-control col-3" id="publisher" placeholder="Publisher"></select>
	</div>
	<div class="form-group">
		<label for="quantity">Quantity</label>
		<input type="number" class="form-control col-3" id="quantity" placeholder="Quantity">
	</div>
	<div class="form-group">
		<label for="price">Price</label>
		<input type="text" class="form-control col-3" id="price" placeholder="Price">
	</div>
	<div class="form-group">
		<label for="deleted">IsDeleted</label><br />
		<input type="checkbox" class="col-3" id="deleted">
	</div>
	<br />
	<button type="button" class="btn btn-success" onclick="onClickEdit()">Edit</button>
	<button type="button" class="btn btn-danger" onclick="onClickReset()">Reset</button>
</form>
